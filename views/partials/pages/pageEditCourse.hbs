{{> tabNoActive }}
<div class="tab-container">
  <div class="container">
    {{#if success }}
      <div class="row">
        <div class="col-md-12">
          <div class="alert alert-success" role="alert">
          	<div class="container">
          		<div class="alert-icon">
          			<i class="now-ui-icons ui-2_like"></i>
          		</div>
          		<strong>Nice!</strong> {{success}}
          		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
          				<span aria-hidden="true">
          				<i class="now-ui-icons ui-1_simple-remove"></i>
          			</span>
          		</button>
          	</div>
          </div>
        </div>
      </div>
    {{/if}}
    <div class="card">
      <div class="card-block">
        <div class="row">
          <div class="col-md-8">
            <div class="container">
              <div class="row">
                <div class="col-md-5">
                  <img class="episode-image" src="/public/uploads/{{this.doc._id}}/image.jpg" alt="">
                </div>
                <div class="col-md-7">
                  <h5><a href="/course/{{this.doc._id}}">{{this.doc.details.[0].post_title}}</a></h5>
                  <p>{{this.doc.details.[0].post_description}}</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col col-md-4">
            <a href="/course/{{ this.doc._id }}" class="btn btn-block btn-primary">Preview Course</a>
            <button data-toggle="modal" data-target="#add_episode" class="btn btn-block btn-primary">Add Episode</button>
          </div>
        </div>
        {{#if epiDoc }}
          <div class="episode_list">
            {{#each epiDoc}}
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-block">
                    <div class="container">
                      <div class="row">
                        <div class="col-md-3">
                          <img class="episode-image" src="/public/uploads/{{this._id}}/image.jpg" alt="">
                        </div>
                        <div class="col-md-9">
                          <h6><a href="/watch/{{this._id}}">{{ this.episode_title }}</a></h6>
                          <p>{{ this.episode_description }}</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
<!-- Modal Core -->
<div class="modal fade" id="add_episode" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add Episode</h4>
      </div>
      <div class="modal-body">
        <form method="post" encType="multipart/form-data">
          <div class="form-group">
            <label for="episode_title">Episode title</label>
            <input type="hidden" name="course_id" value="{{ this.doc._id }}">
            <input type="text" id="episode_title" class="form-control" name="episode_title" placeholder="Episode title">
          </div>
          <div class="form-group">
            <label for="magnet">Magnet URI</label>
            <input class="form-control" type="text" id="magnet" name="magnet">
            <small>Magnet can be generated by clicking here</small>
          </div>
          <div class="form-group">
            <label for="episode_description">Episode Description</label>
            <textarea id="episode_description" name="episode_description" class="form-control" rows="10" placeholder="Tell something about this episode"></textarea>
          </div>
          <div class="form-group">
            <label for="episode_cover">Upload cover photo</label>
            <input type="file" class="form-control-file" name="episode_cover" id="episode_cover" aria-describedby="fileHelp">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Upload</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
